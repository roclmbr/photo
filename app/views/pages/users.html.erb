<h1 align="center">All Users</h1>

<%= @users.each do |user| %>
 <div align="center">
<ul class="listing">   
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), root_path(user) %></li>
                <li class="article-title">
                    <%= link_to user.full_name, root_path(user) %>
                </li>
                <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
            </div>
        </div>
</ul>
</div>    
<% end %>
